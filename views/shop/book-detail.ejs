<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <h1><%= book.title %></h1>
        <hr>
        <div class="image">
            <img src="/<%= book.imageUrl %>" alt="<%= book.title %>">
        </div>
        <h2>Rs.<%= book.price %></h2>
        <h2><%= book.genre %></h2>
        <p><%= book.description %></p>
        <% if(isAuthenticated) { %>
            <%- include('../includes/add-to-cart.ejs',{book: book}) %>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>