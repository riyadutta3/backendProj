<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length <= 0) { %>
            <h1>Nothing there!!</h1>
        <% } else { %>
            <ul class="orders">
                <% orders.forEach(order => { %>
                <li class="orders__items">
                    <h1># <%= order._id %>- <a href="/orders/<%= order._id %>">Invoice</a></h1>
                    <ul class="orders__books">
                        <% order.books.forEach(b => { %>
                            <li class="orders__books-item">
                               <%= b.bookData.title %> (<%= b.quantity %>)
                            </li>
                        <% }) %>
                    </ul>
                </li>
                <% }) %>
            </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>